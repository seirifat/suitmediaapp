<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.seirifat.suitmediaapp.Event">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_bck_article"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/rlBtnBckEvnt"></RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@drawable/line_actionbar_articledetail"
            android:id="@+id/relativeLayout2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGE FROM CODI"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rlBtnBckEvnt"
            android:layout_toEndOf="@+id/rlBtnBckEvnt"
            android:layout_marginLeft="10dp"
            android:textColor="#c5b457" />

        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:drawable/ic_search_category_default"
            android:clickable="true"
            android:id="@+id/relativeLayout4"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/relativeLayout3"
            android:layout_toStartOf="@+id/relativeLayout3"
            android:backgroundTint="#c5b457"
            android:backgroundTintMode="src_over" />

        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_new_article"
            android:clickable="true"
            android:id="@+id/relativeLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/theList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout" />

</RelativeLayout>
